<Window
    x:Class="_07_Occupazione.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_07_Occupazione"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="350"
    mc:Ignorable="d">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel>
            <Button x:Name="bElement1" Content="Top button" />
        </WrapPanel>
        <WrapPanel Margin="63,0,0,0">
            <Button x:Name="bElement2" Content="button alto" />
            <StackPanel>
                <Button x:Name="bElement3" Content="Bottom button" />
                <Button x:Name="bElement4" Content="stretch" />
                <Button x:Name="bElement5" Content="center button" />
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>

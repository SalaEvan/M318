<Window
    x:Class="Esempio_Stile_Esplicit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Esempio_Stile_Esplicit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="Header" TargetType="Label">
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="Titolo" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="LightCoral" />
        </Style>
        <Style x:Key="Paragrafo" TargetType="Label">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Background" Value="LightBlue" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Header" Style="{StaticResource Header}" />
            <Label Content="Titolo" Style="{StaticResource Titolo}" />
            <Label Content="Paragrafo" Style="{StaticResource Paragrafo}" />
        </StackPanel>
    </Grid>
</Window>
